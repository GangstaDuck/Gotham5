@model app.domain.Models.CapsulesInformation

@{
    ViewData["Title"] = "Edit";
}


<h4>Capsule d'Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
